{
    "id": "gtasks",
    "name": "Google Tasks MCP Server",
    "description": "This MCP server integrates with Google Tasks to allow listing, reading, searching, creating, updating, and deleting tasks.",
    "tags": [
        "google",
        "tasks",
        "mcp"
    ],
    "repo": "https://github.com/zcaceres/gtasks-mcp",
    "command": "npx",
    "baseArgs": [
        "-y",
        "@modelcontextprotocol/server-gtasks"
    ],
    "configurable": true,
    "configSchema": {
        "properties": {
            "taskListId": {
                "type": "string",
                "description": "Task list ID",
                "required": false
            },
            "title": {
                "type": "string",
                "description": "Task title",
                "required": true
            },
            "notes": {
                "type": "string",
                "description": "Task notes",
                "required": false
            },
            "due": {
                "type": "string",
                "description": "Due date",
                "required": false
            }
        }
    },
    "argsMapping": {
        "taskListId": {
            "type": "arg",
            "position": 1
        },
        "title": {
            "type": "arg",
            "position": 2
        },
        "notes": {
            "type": "arg",
            "position": 3
        },
        "due": {
            "type": "arg",
            "position": 4
        }
    }
}