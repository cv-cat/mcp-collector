    "tags": [
        "tmdb",
        "api",
        "movies"
    ],
    "repo": "https://github.com/Laksh-star/mcp-server-tmdb",
    "command": "node",
    "baseArgs": [
        "./dist/index.js"
    ],
    "configurable": true,
    "configSchema": {
        "properties": {
            "TMDB_API_KEY": {
                "type": "string",
