{
    "id": "mcp-server-axiom",
    "name": "MCP Server Axiom",
    "description": "A Model Context Protocol server implementation for Axiom that enables AI agents to query your data using Axiom Processing Language (APL).",
    "tags": [
        "mcp",
        "axiom",
        "apl"
    ],
    "repo": "https://github.com/axiomhq/mcp-server-axiom",
    "command": "go",
    "baseArgs": [
        "install",
        "github.com/axiomhq/axiom-mcp@latest"
    ],
    "configurable": true,
    "configSchema": {
        "properties": {
            "token": {
                "type": "string",
                "description": "Axiom API token",
                "required": true
            },
            "url": {
                "type": "string",
                "description": "Axiom API URL",
                "required": true
            },
            "query-rate": {
                "type": "integer",
                "description": "Rate limit for queries",
                "required": true
            },
            "datasets-rate": {
                "type": "integer",
                "description": "Rate limit for datasets",
                "required": true
            }
        }
    },
    "argsMapping": {
        "token": {
            "type": "env",
            "key": "AXIOM_TOKEN"
        },
        "url": {
            "type": "env",
            "key": "AXIOM_URL"
        },
        "query-rate": {
            "type": "env",
            "key": "AXIOM_QUERY_RATE"
        },
        "datasets-rate": {
            "type": "env",
            "key": "AXIOM_DATASETS_RATE"
        }
    }
}