{
    "id": "mcp-simple-pubmed",
    "name": "MCP Simple PubMed",
    "description": "An MCP server that provides access to PubMed articles through the Entrez API.",
    "tags": [
        "pubmed",
        "mcp",
        "api"
    ],
    "repo": "https://github.com/andybrandt/mcp-simple-pubmed",
    "command": "pip",
    "baseArgs": [
        "install",
        "mcp-simple-pubmed"
    ],
    "env": {
        "PUBMED_EMAIL": "your-email@example.com",
        "PUBMED_API_KEY": "your-api-key"
    },
    "configurable": true,
    "configSchema": {
        "properties": {
            "PUBMED_EMAIL": {
                "type": "string",
                "description": "Email address required by NCBI.",
                "required": true
            },
            "PUBMED_API_KEY": {
                "type": "string",
                "description": "Optional API key for higher rate limits.",
                "required": false
            }
        }
    }
}