{
    "id": "mcp-zotero",
    "name": "MCP Zotero",
    "description": "A Model Context Protocol server for Zotero integration that allows Claude to interact with your Zotero library.",
    "tags": [
        "zotero",
        "mcp",
        "integration"
    ],
    "repo": "https://github.com/kaliaboi/mcp-zotero",
    "command": "npx",
    "baseArgs": [
        "-g",
        "mcp-zotero"
    ],
    "configurable": true,
    "configSchema": {
        "properties": {
            "ZOTERO_API_KEY": {
                "type": "string",
                "description": "Zotero API Key",
                "required": true
            },
            "ZOTERO_USER_ID": {
                "type": "string",
                "description": "Zotero User ID",
                "required": true
            }
        }
    },
    "argsMapping": {
        "ZOTERO_API_KEY": {
            "type": "env",
            "key": "ZOTERO_API_KEY"
        },
        "ZOTERO_USER_ID": {
            "type": "env",
            "key": "ZOTERO_USER_ID"
        }
    }
}