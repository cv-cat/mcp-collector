{
    "id": "mcp-server-firecrawl",
    "name": "FireCrawl MCP Server",
    "description": "A Model Context Protocol (MCP) server implementation that integrates with FireCrawl for advanced web scraping capabilities.",
    "tags": [
        "web scraping",
        "MCP",
        "FireCrawl"
    ],
    "repo": "https://github.com/vrknetha/mcp-server-firecrawl",
    "command": "npx",
    "baseArgs": [
        "-y",
        "@smithery/cli",
        "install",
        "mcp-server-firecrawl",
        "--client",
        "claude"
    ],
    "env": {
        "FIRE_CRAWL_API_KEY": "YOUR_API_KEY_HERE",
        "FIRE_CRAWL_API_URL": "https://firecrawl.your-domain.com"
    },
    "configurable": true,
    "configSchema": {
        "properties": {
            "FIRE_CRAWL_API_KEY": {
                "type": "string",
                "description": "Your FireCrawl API key",
                "required": true
            },
            "FIRE_CRAWL_API_URL": {
                "type": "string",
                "description": "Custom API endpoint for self-hosted instances",
                "required": false
            }
        }
    },
    "argsMapping": {
        "url": {
            "type": "string",
            "required": true
        },
        "maxDepth": {
            "type": "number",
            "required": false
        }
    }
}