{
    "id": "win-cli-mcp-server",
    "name": "Windows CLI MCP Server",
    "description": "MCP server for secure command-line interactions on Windows systems, enabling controlled access to PowerShell, CMD, Git Bash shells, and remote systems via SSH.",
    "tags": [
        "mcp",
        "windows",
        "cli",
        "ssh",
        "security"
    ],
    "repo": "https://github.com/SimonB97/win-cli-mcp-server",
    "command": "npx",
    "baseArgs": [
        "-y",
        "@simonb97/server-win-cli"
    ],
    "configurable": true,
    "configSchema": {
        "properties": {
            "security": {
                "type": "object",
                "description": "Security settings for the MCP server",
                "required": true
            },
            "shells": {
                "type": "object",
                "description": "Shell configuration settings",
                "required": true
            },
            "ssh": {
                "type": "object",
                "description": "SSH settings for remote connections",
                "required": true
            }
        }
    },
    "argsMapping": {}
}