{
    "id": "spotify-mcp",
    "name": "Spotify MCP",
    "description": "MCP project to connect Claude with Spotify. Built on top of spotipy-dev's API.",
    "tags": [
        "spotify",
        "mcp"
    ],
    "repo": "https://github.com/varunneal/spotify-mcp",
    "command": "uv",
    "baseArgs": [
        "--directory",
        "/path/to/spotify_mcp",
        "run",
        "spotify-mcp"
    ],
    "env": {
        "SPOTIFY_CLIENT_ID": "YOUR_CLIENT_ID",
        "SPOTIFY_CLIENT_SECRET": "YOUR_CLIENT_SECRET",
        "SPOTIFY_REDIRECT_URI": "http://localhost:8888"
    },
    "configurable": true,
    "configSchema": {
        "properties": {
            "spotify_key": {
                "type": "string",
                "description": "Spotify API Key",
                "required": true
            }
        }
    },
    "argsMapping": {
        "spotify_key": {
            "type": "env",
            "key": "SPOTIFY_API_KEY"
        }
    }
}